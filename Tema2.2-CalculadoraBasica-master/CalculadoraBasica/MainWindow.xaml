    <Grid>
        <TextBox x:Name="Operando1TextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="120" Margin="138,43,0,0"/>
